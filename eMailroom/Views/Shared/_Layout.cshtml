<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - eMailroom</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark-blue">
        <a class="navbar-brand mb-0 h1" href="">eMailroom / @ViewBag.Title</a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <div class="navbar-nav ml-auto mt-2 mt-lg-0 btn-group" role="group" aria-label="Basic example">
                <a role="button" href="#" data-toggle="modal" data-target="#modal-change-password" class="nav-link btn btn-dark"><i class="fas fa-key"></i> Change password</a>
                <a role="button" href="~/Home/Signout" class="nav-link btn btn-dark"><i class="fas fa-sign-out-alt"></i> Sign out</a>
            </div>
        </div>
    </nav>
    <div class="d-flex" id="wrapper">
        <div class="bg-light border-right" id="sidebar-wrapper">
            <div class="list-group list-group-flush">
                @Html.Partial("_Menu");
            </div>
        </div>

        <div id="page-content-wrapper" class="mb-5">
            <button class="btn btn-outline-dark m-2" id="menu-toggle"><i id="icon-chevron" class="fas fa-chevron-left"></i></button>
            <div style="min-height:40px">
                <div id="main-alert" role="alert"></div>
            </div>
            <div class="container-fluid pt-3">
                @RenderBody()
            </div>
            <footer style="border-top: 1px solid #dee2e6;background: #f3f3f3;">
                <p style="margin: 1rem;">&copy; @DateTime.Now.Year - eMailroom</p>
            </footer>
        </div>
    </div>

    <div class="modal fade" id="modal-change-password" tabindex="-1" role="dialog" aria-labelledby="title-modal-change-password" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="title-modal-change-password">Change password</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div id="alert-change-password" role="alert">

                    </div>
                    <div class="form-group" id="inputs-change-password">
                        <div class="collapse show" id="changePasswordCollapse" style="">
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text label-integrated">Old password</span>
                                </div>
                                <input type="password" class="form-control" id="input-old-password" autocomplete="off">
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text label-integrated">New password</span>
                                </div>
                                <input type="password" class="form-control" id="input-new-password" autocomplete="off">
                            </div>
                            <div class="input-group mb-4">
                                <div class="input-group-prepend">
                                    <span class="input-group-text label-integrated">Confirm password</span>
                                </div>
                                <input type="password" class="form-control" id="input-confirm-password" autocomplete="off">
                            </div>

                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary btn-block" id="btn-change-password">Change password</button>
                </div>
            </div>
        </div>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/popper")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/scripts/js")
    @RenderSection("scripts", required: false)

    <script>
        var opened = 1;
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
            if (opened === 1) {
                opened = 0;
                $("#icon-chevron").attr('class', 'fas fa-chevron-right');
            }
            else {
                opened = 1;
                $("#icon-chevron").attr('class', 'fas fa-chevron-left');
            }
        });
    </script>
</body>
</html>