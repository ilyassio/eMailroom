<!DOCTYPE html>
<html lang="@System.Globalization.CultureInfo.CurrentCulture.Name">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - eMailroom</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark-blue">
        <a class="navbar-brand mb-0 h1" href="">eMailroom / @ViewBag.Title</a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <div class="navbar-nav ml-auto mt-2 mt-lg-0 btn-group" role="group" aria-label="Basic example">
                <a role="button" href="#" data-toggle="modal" data-target="#modal-settings" class="nav-link btn btn-dark"><i class="fas fa-cog"></i> @Resources.Resource.Settings</a>
                <a role="button" href="~/Home/Signout" class="nav-link btn btn-dark"><i class="fas fa-sign-out-alt"></i> @Resources.Resource.SignOut</a>
            </div>
        </div>
    </nav>
    <div class="d-flex" id="wrapper">
        <div class="bg-light border-right" id="sidebar-wrapper">
            <div class="list-group list-group-flush" id="menu">
                @Html.Partial("_Menu");
            </div>
        </div>

        <div id="page-content-wrapper" class="mb-5">
            <button class="btn btn-outline-dark m-2" id="menu-toggle"><i id="icon-chevron" class="fas fa-chevron-left"></i></button>
            <div style="min-height:40px">
                <div id="main-alert" role="alert"></div>
            </div>
            <div class="container-fluid pt-3">
                @RenderBody()
            </div>
            <footer style="border-top: 1px solid #dee2e6;background: #f3f3f3;">
                <p style="margin: 1rem;">&copy; @DateTime.Now.Year - eMailroom</p>
            </footer>
        </div>
    </div>

    <div class="modal fade" id="modal-settings" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@Resources.Resource.Settings</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <button type="button" class="btn btn-block btn-secondary mb-4 text-left" data-toggle="collapse" data-target="#collapse-profil"> @Resources.Resource.Profile <i class="fas fa-chevron-down float-right mt-1"></i></button>
                    <div class="collapse" id="collapse-profil">
                        <form>
                            <div id="alert-change-profil" role="alert">

                            </div>
                            <div class="form-group" id="myprofile">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">@Resources.Resource.Id</span>
                                    </div>
                                    <input type="text" class="form-control" autocomplete="off" readonly>
                                </div>
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">@Resources.Resource.Firstname</span>
                                    </div>
                                    <input type="text" class="form-control" autocomplete="off" readonly>
                                </div>
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">@Resources.Resource.Lastname</span>
                                    </div>
                                    <input type="text" class="form-control" autocomplete="off" readonly>
                                </div>
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">@Resources.Resource.Email</span>
                                    </div>
                                    <input type="email" class="form-control" name="email" autocomplete="off" id="input-email" readonly>
                                    <div class="input-group-append">
                                        <button class="btn btn-light btn-edit" id="azert" type="button"><i class="fas fa-edit"></i></button>
                                    </div>
                                </div>
                                <div class="input-group mb-4">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">@Resources.Resource.Phone</span>
                                    </div>
                                    <input type="number" class="form-control" name="phone" autocomplete="off" id="input-phone" readonly>
                                    <div class="input-group-append">
                                        <button class="btn btn-light btn-edit" type="button"><i class="fas fa-edit"></i></button>
                                    </div>
                                </div>
                                <button class="btn btn-outline-primary btn-block d-none" id="btn-edit-profile" type="submit">Modifier</button>
                            </div>
                        </form>
                    </div>
                    <hr>
                    <button type="button" class="btn btn-block btn-secondary mb-4 text-left" data-toggle="collapse" data-target="#collapse-change-language"> @Resources.Resource.ChangeLanguage <i class="fas fa-chevron-down float-right mt-1"></i></button>
                    <div class="collapse" id="collapse-change-language">
                        <div class="list-group">
                            <a href='@Url.Action("ChangeLanguage","Home", new { LangAbbr = "ar" })' class="list-group-item list-group-item-action text-right">العربية</a>
                            <a href='@Url.Action("ChangeLanguage","Home", new { LangAbbr = "en" })' class="list-group-item list-group-item-action">English</a>
                            <a href='@Url.Action("ChangeLanguage","Home", new { LangAbbr = "fr" })' class="list-group-item list-group-item-action">Français</a>
                        </div>                  
                    </div>
                    <hr>
                    <button type="button" class="btn btn-block btn-secondary mb-4 text-left" data-toggle="collapse" data-target="#collapse-change-password"> @Resources.Resource.ChangePassword <i class="fas fa-chevron-down float-right mt-1"></i></button>
                    <div class="collapse" id="collapse-change-password">
                        <form id="form-change-password">
                            <div id="alert-change-password" role="alert">

                            </div>
                            <div class="form-group" id="inputs-change-password">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"> @Resources.Resource.OldPassword</span>
                                    </div>
                                    <input type="password" name="oldPassword" class="form-control" id="input-old-password" autocomplete="off">
                                </div>
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text label-integrated"> @Resources.Resource.NewPassword</span>
                                    </div>
                                    <input type="password" name="newPassword" class="form-control" id="input-new-password" autocomplete="off">
                                </div>
                                <div class="input-group mb-4">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"> @Resources.Resource.ConfirmPassword</span>
                                    </div>
                                    <input type="password" name="confirmPassword" class="form-control" id="input-confirm-password" autocomplete="off">
                                </div>
                                <button class="btn btn-primary btn-block d-none" type="submit" id="btn-change-password"> @Resources.Resource.ChangePassword</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/popper")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/scripts/js")
    @RenderSection("scripts", required: false)

    <script>
        MailUploadMsg = "@Resources.Resource.MailUploadMsg";
        AttachementsUploadMsg = "@Resources.Resource.AttachementsUploadMsg";
        EmptyRequiredField = "@Resources.Resource.EmptyRequiredField";
        PasswordConfirmationError = "@Resources.Resource.PasswordConfirmationError";
        SelectMoreThanOneFileError = "@Resources.Resource.SelectMoreThanOneFileError";
        AddNewContact = "@Resources.Resource.AddNewContact";
        ChooseSelect = "@Resources.Resource.ChooseSelect";

        opened = 1;
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
            if (opened === 1) {
                opened = 0;
                $("#icon-chevron").attr('class', 'fas fa-chevron-right');
            }
            else {
                opened = 1;
                $("#icon-chevron").attr('class', 'fas fa-chevron-left');
            }
        });
    </script>
</body>
</html>